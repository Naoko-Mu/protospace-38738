<div class="card">
  <%= image_tag prototype.image.variant(resize: '500x500'), class: :card__img if prototype.image.attached? %>
  <div class="card__body">
    <%= link_to prototype.title, user_path(prototype.user.id), class: :card__title %>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to prototype.concept, user_path(prototype.user.id), class: :card__user %>
  </div>
</div>
